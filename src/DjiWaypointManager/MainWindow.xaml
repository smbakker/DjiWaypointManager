<Window x:Class="DjiWaypointManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:DjiWaypointManager.UserControls"
        mc:Ignorable="d"
        Title="DJI Mission Viewer" Height="800" Width="1400"
        Closing="Window_Closing">
    
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
            <!-- File Menu -->
            <MenuItem Header="_File">
                <MenuItem Header="_Open Mission..." 
                          Command="{Binding OpenMissionCommand}"
                          InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <TextBlock Text="📁" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Export Mission..." 
                          Command="{Binding ExportMissionCommand}"
                          InputGestureText="Ctrl+E">
                    <MenuItem.Icon>
                        <TextBlock Text="💾" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Clear Mission" 
                          Command="{Binding ClearMissionCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="🗑️" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" 
                          Command="{Binding ExitApplicationCommand}"
                          InputGestureText="Alt+F4">
                    <MenuItem.Icon>
                        <TextBlock Text="🚪" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!-- Device Menu -->
            <MenuItem Header="_Device">
                <MenuItem Header="_Scan for Devices" 
                          Command="{Binding ScanDevicesCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="🔍" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Load from Device..." 
                          Command="{Binding LoadFromDeviceCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="📱" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Refresh Device Files" 
                          Command="{Binding RefreshDeviceFilesCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="🔄" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Device _Information..." 
                          Command="{Binding ShowDeviceInfoCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="ℹ️" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Toggle Device _Monitoring" 
                          Command="{Binding ToggleDeviceMonitoringCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="📡" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!-- View Menu -->
            <MenuItem Header="_View">
                <MenuItem Header="Fit to _Mission" 
                          Command="{Binding FitToMissionCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="🎯" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Show _POIs" 
                          IsCheckable="True"
                          IsChecked="{Binding ShowPois}">
                    <MenuItem.Icon>
                        <TextBlock Text="📍" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Map _Options..." 
                          Command="{Binding ShowMapOptionsCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="🗺️" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!-- Help Menu -->
            <MenuItem Header="_Help">
                <MenuItem Header="_Help Topics" 
                          Command="{Binding ShowHelpCommand}"
                          InputGestureText="F1">
                    <MenuItem.Icon>
                        <TextBlock Text="❓" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_About DJI Waypoint Manager..." 
                          Command="{Binding AboutCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="💡" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Simplified Device Management Header (just device selection and status) -->
        <uc:DeviceManagementControl DockPanel.Dock="Top" DataContext="{Binding}"/>
        
        <!-- Status Bar at Bottom -->
        <uc:StatusBarControl DockPanel.Dock="Bottom" DataContext="{Binding}"/>

        <!-- Main Content -->
        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Mission Data -->
            <uc:MissionDataControl Grid.Column="0" Margin="0,0,4,0" DataContext="{Binding}"/>

            <!-- GridSplitter for resizing -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" 
                          Background="#DDD" ShowsPreview="True" Cursor="SizeWE"/>

            <!-- Right Panel - Map -->
            <uc:MapControl Grid.Column="2" Margin="4,0,0,0" DataContext="{Binding}"/>
        </Grid>
    </DockPanel>
</Window>
